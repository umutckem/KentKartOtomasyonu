<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KentKartOtomasyonu.Views.BakiyeYukle"
             Title="Bakiye Yukle">
    <Grid>
        <Image Source="userprofile.png" Aspect="AspectFill" HeightRequest="999"/>
        <Entry x:Name="kartNumarasi" VerticalOptions="Start" HorizontalOptions="Center" WidthRequest="250" Placeholder="Kart Numarası" Margin="0,100"/>
        <Picker x:Name="ayPicker" VerticalOptions="Start" HorizontalOptions="Center" Margin="0,150" WidthRequest="250" Title="Ay Seçiniz"/>
        <Picker x:Name="yilPicker" VerticalOptions="Start" HorizontalOptions="Center" Margin="0,200" WidthRequest="250" Title="Yıl Seçiniz"/>
        <Entry x:Name="cvv" VerticalOptions="Start" HorizontalOptions="Center" WidthRequest="250" Placeholder="CVV" Margin="0,250"/>
        <CheckBox x:Name="check" VerticalOptions="Start" HorizontalOptions="Center" Margin="0,300"/>
        <Button Text="Yükle" VerticalOptions="Start" HorizontalOptions="Center" Margin="0,350" WidthRequest="250" FontAttributes="Bold" Background="#F44336" Clicked="Button_Clicked"/>
    </Grid>
</ContentPage>
